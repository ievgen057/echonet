{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/microservices/auth-service/src/main.js",
			"env": {},
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch via Nodemon",
			"runtimeExecutable": "nodemon",
			"program": "${workspaceFolder}/src/main.js",
			"restart": true,
			"env": {},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Process",
			"processId": "${command:PickProcess}",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node-terminal",
			"name": "Запустить сценарий: start",
			"request": "launch",
			"command": "npm run start",
			"cwd": "${workspaceFolder}\\microservices\\auth-service"
		},
	]
}